<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="TaskPaneApp">
  <Id>9bb7a975-b568-4b2d-9683-39fd2900118f</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>mantukin</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Word AI OCR"/>
  <Description DefaultValue="Automate document layout and text reconstruction from photos or scans via AI-generated JSON."/>
  <IconUrl DefaultValue="https://mantukin.github.io/word-ai-ocr/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://mantukin.github.io/word-ai-ocr/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://github.com/mantukin/word-ai-ocr"/>
  <AppDomains>
    <AppDomain>https://mantukin.github.io</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://mantukin.github.io/word-ai-ocr/taskpane.html"/>
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          <FunctionFile resid="Commands.Url" />
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="CommandsGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://mantukin.github.io/word-ai-ocr/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://mantukin.github.io/word-ai-ocr/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://mantukin.github.io/word-ai-ocr/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://github.com/mantukin/word-ai-ocr"/>
        <bt:Url id="Commands.Url" DefaultValue="https://mantukin.github.io/word-ai-ocr/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="https://mantukin.github.io/word-ai-ocr/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="Get started with Word AI OCR!" />
        <bt:String id="CommandsGroup.Label" DefaultValue="AI Reconstruction" />
        <bt:String id="TaskpaneButton.Label" DefaultValue="Open Word AI OCR" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="Word AI OCR loaded successfully. Click 'Open Word AI OCR' to start reconstructing your documents." />
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open the Word AI OCR reconstruction panel" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
